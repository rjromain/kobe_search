<!DOCTYPE html>
<html lang="en">
   <head>
      <meta charset="UTF-8">
      <title>Search</title>
      <link href="style.css" rel="stylesheet" type="text/css">
   </head>
   <body>

      <div class="header">
         <a href="/login">Login</a>
         <a href="/signup">Sign Up</a>
         <a href="/profile">Profile</a>
      </div>


   		<div class="search-items">
      <form method="GET" action="/search">
         <input type="text" name="q" placeholder="Search">
         <button> dunk this</button>
      </form>
      	</div>
      



      <!-- results items -->
      <% results.forEach(function(result) { %>

	      <div class="result-item">
	         <p><a href="<%= result.data.url %>"><%= result.data.title %></a></p>
	         <%if (result.data.thumbnail.length > 0 && result.data.thumbnail !== "self") { %>
	         <img class="thumbnail" src="<%= result.data.thumbnail %>">
	         <% }else{ %>
	         <img src="kobe_default.jpg">
	         <% } %>
	      </div>
	      <form method="POST" action="/favorites">
	         <input name="kobe" type="hidden" value="<%=result.data.url%>">
	         <button>Highlights reel</button>
	      </form>

      <% }) %>	



   </body>
</html>